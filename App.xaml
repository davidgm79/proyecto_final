<!-- App.xaml -->
<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto_final.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#2E86AB</Color>
            <Color x:Key="SecondaryColor">#A23B72</Color>
            <Color x:Key="SuccessColor">#27AE60</Color>
            <Color x:Key="WarningColor">#F39C12</Color>
            <Color x:Key="DangerColor">#E74C3C</Color>
            <Color x:Key="LightBackground">#F8F9FA</Color>
            
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#2C3E50"/>
            </Style>
            
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="#2C3E50"/>
                <Setter Property="PlaceholderColor" Value="#95A5A6"/>
                <Setter Property="HeightRequest" Value="50"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
